<!DOCTYPE html>
<html>
<head>
    <title>MailboxLayer</title>
	<script src="/Scripts/jquery-3.1.1.min.js"></script>
</head>
<body>
<script type="text/javascript">
    $(document).ready(function () {

        $.fn.serializeObject = function () {
            var o = {};
            var a = this.serializeArray();
            $.each(a, function () {
                if (o[this.name]) {
                    if (!o[this.name].push) {
                        o[this.name] = [o[this.name]];
                    }
                    o[this.name].push(this.value || '');
                } else {
                    o[this.name] = this.value || '';
                }
            });
            return o;
        };

        $("#form1").submit(function () {
             var dataType = 'application/json; charset=utf-8';
            var data = $("#form1").serializeObject();
            var jsonData = JSON.stringify(data);
           console.log('Submitting form...');
            $.ajax({
                type: 'POST',
                url: 'Home/MailboxLayer',
			    dataType: 'json',
                contentType: dataType,
                data: jsonData,
                success: function (result) {
                    console.log('Data received: ');
                    console.log(result);
                    $('#result').html("<p>" + JSON.stringify(result) + "</p>");
                }
            });
			return false;
        });

	    $("#form2").submit(function () {
        var dataType = 'application/json; charset=utf-8';
        var data = $("#form2").serializeObject();
        var jsonData = JSON.stringify(data);
        console.log('Submitting form...');
        $.ajax({
            type: 'POST',
            url: 'Home/NumVerify',
            dataType: 'json',
            contentType: dataType,
            data: jsonData,
            success: function (result) {
                console.log('Data received: ');
                console.log(result);
                $('#numResult').html("<p>" + JSON.stringify(result) + "</p>");
            }
        });
        return false;
        });
    });
</script>

<h1> Phone and Email POCs </h1> 

<form id="form1">
    <div>
        Enter email: <input type="text" id="email" name="email"/>
    </div>
    <div>
        <input type="submit" value="submit email">
    </div>
</form>
<div id="result">
</div>
